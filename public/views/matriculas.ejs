<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matrículas</title>
    <link rel="stylesheet" href="../assets/styles/matriculas.css">
</head>

<body>
    <main>
        <% matriculas.forEach(matricula => { %>
            <div class="mainSection">
                <h2>Matricula: <%= matricula.id %></h2>
                <p>Usuário: <%= matricula.usuario_id %></p>
                <p>Matéria: <%= matricula.materia_id %></p>
                <p>Data: <%= matricula.data_matricula %></p>
            </div>
        <% }); %>
    </main>

    <button id="getCursos">Ver mais cursos</button>

    <script>
        document.getElementById("getCursos").addEventListener('click', () => {
            window.location.href = "/cursos";
        });
    </script>
</body>
</html>