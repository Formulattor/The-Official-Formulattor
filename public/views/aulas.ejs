<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aulas</title>
</head>
<body>
    <% aulas.forEach(aula => { %>
        <div>
            <button onclick="getAula(aula.id)">
                <h2>Aula <%= aula.nome %></h2>
                <p><%= aula.conteudo %></p>
            </button>
        </div>
    <% }); %>
</body>

    <script>

        function getAula(id){
            getClassById({
                params:{
                    id: id
                }
            })
        }

    </script>

</html>